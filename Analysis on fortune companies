	SELECT * FROM fortune_companies;

	--USING THE AGGREGATE FUNCTION TO GET THE ACTUAL NUMBERS OF ROWS
	SELECT COUNT(company_id)
	FROM fortune_companies;

	--USING SUBQUERY TO SEE THE COMPANY WITH THE LONGEST MATERNITY LEAVE WEEKS
	SELECT company_name,
	industry,
	revenue,
	maternity_leave_weeks FROM fortune_companies
	WHERE maternity_leave_weeks= (SELECT MAX(maternity_leave_weeks)
	FROM fortune_companies);
	
--USING CASE STATEMENT TO CREATE A NEW COLUMN IN THE TABLE WITH THE REVENUE RATING.

SELECT company_name,
	industry,
	revenue,
	maternity_leave_weeks,
CASE
WHEN revenue BETWEEN 300 AND 500 THEN 'high_revenue'
WHEN revenue BETWEEN 200 AND 499 THEN 'medium_revenue'
WHEN revenue BETWEEN 100 AND 299  THEN 'low_revenue'
ELSE 'best_revenue'
END AS 'revenue_rating'
FROM fortune_companies
ORDER BY revenue DESC;


--USING THE HAVING CLAUSE TO FIND THE COMPANY WITH THE LARGEST EMPLOYEES TEAM
--AND THE INCREASED REVENUE AS A RESULT OF LARGE WORK_FORCE

SELECT * FROM fortune_companies;

SELECT industry, MAX(revenue)AS highest_revenue,
  MAX(employees) AS largest_workforce
FROM fortune_companies
GROUP BY industry
HAVING MAX(employees) >= 50000
ORDER BY largest_workforce DESC;

--USING THE AND OPERATOR TO RETRIEVE WHICH COMPANY PAY THEIR EMPLOYEES TIME OFF WORK AND HOW MANY DAYS ARE PAID
SELECT * FROM fortune_companies
WHERE paid_time_off_days >= 15
AND healthcare_benefits = 1
ORDER BY paid_time_off_days DESC;

----USING THE OR OPERATOR TO FILTER DATA
--- THE TRUE DATA ARE PRINTED WHILE THE FALSE DATA ARE IGNORED.
---THE OR OPERATOR IS FLEXIBLE AND PROVIDE QUERY WITH AN ANSWER.
SELECT company_name,industry,
revenue
FROM fortune_companies
WHERE revenue =300.90
OR avg_employee_tenure>=10
OR company_name='company H'
CREATE TABLE fortune_companies (
    company_id INTEGER PRIMARY KEY IDENTITY(10,3),
    company_name VARCHAR(100),
    industry VARCHAR(100),
    revenue DECIMAL(5,2),
    employees INTEGER,
    healthcare_benefits INT,
    paid_time_off_days INTEGER,
    maternity_leave_weeks INTEGER,
    avg_employee_tenure DECIMAL
);

