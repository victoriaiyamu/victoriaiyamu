CREATE TABLE fortune_companies (
    company_id INTEGER PRIMARY KEY IDENTITY(10,3),
    company_name VARCHAR(100),
    industry VARCHAR(100),
    revenue DECIMAL(5,2),
    employees INTEGER,
    healthcare_benefits INT,
    paid_time_off_days INTEGER,
    maternity_leave_weeks INTEGER,
    avg_employee_tenure DECIMAL
);

DROP TABLE fortune_companies
